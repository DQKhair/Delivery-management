@model Delivery.Entities.AccountLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";

}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <body style="background-image:url(/Images/background_login.jpg);">
        <div style="margin-top: 7%;" class="container mb-4">
            <div class="row mx-auto">
                <div class="col-5 my-auto text-center">
                    <img style="width: 350px; height: 150px;" src="~/Images/logo_delivery.png" alt="">
                    <h5 style="font-family: Roboto; font-style:italic; font-weight: 600;" class="mt-3">Nothing can slow us down.</h5>
                </div>
                <div class="col-5 col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card border-0 shadow rounded-4 ">
                        <div class="card-body p-4 p-sm-5">
                            <form>
                                @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                                <div class="mb-3">
                                    <label for="" class="form-label">Username</label>
                                    @Html.EditorFor(model => model.TenTaiKhoan, new { htmlAttributes = new { @class = "form-control mw-100", @maxlength = "50" } })
                                </div>
                                <div class="mb-3">
                                    <label for="" class="form-label ">Password</label>
                                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control mw-100", @type = "password", @id = "pass" } })
                                </div>
                                <button style="background: linear-gradient(90deg, #54BF5A 0%, #228542 100%); border: none; border-radius: 25px; font-size: 1.2rem;"
                                        type="submit" class="btn btn-primary p-2 w-100 mt-4">
                                    Login
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
}


@section scripts{
    <script type="text/javascript">
        window.onload = () => {
            const pass = document.getElementById('pass');
            pass.onpaste = e => e.preventDefault();
        }

    </script>
}



